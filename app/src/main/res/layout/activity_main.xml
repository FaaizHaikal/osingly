<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Penerjemah Osing"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"
                android:layout_marginEnd="8dp" />

            <!-- Theme Toggle Button -->
            <ImageButton
                android:id="@+id/btn_theme_toggle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_dark_mode"
                android:contentDescription="Toggle Theme" />

        </LinearLayout>

        <!-- Language Direction Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_source_lang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Osing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/primary_text" />

            <ImageButton
                android:id="@+id/btn_swap_languages"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_swap"
                android:contentDescription="Swap Languages" />

            <TextView
                android:id="@+id/tv_target_lang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Indonesia"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/primary_text" />

        </LinearLayout>

        <!-- Input Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Input Text Area -->
                <EditText
                    android:id="@+id/et_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Ketik teks dalam bahasa Osing..."
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:background="@null"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <!-- Input Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <!-- Camera Button -->
                    <ImageButton
                        android:id="@+id/btn_camera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_camera"
                        android:contentDescription="Ambil Foto"
                        android:layout_marginEnd="8dp" />

                    <!-- Gallery Button -->
                    <ImageButton
                        android:id="@+id/btn_gallery"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_gallery"
                        android:contentDescription="Pilih dari Galeri"
                        android:layout_marginEnd="8dp" />

                    <!-- Clear Button -->
                    <ImageButton
                        android:id="@+id/btn_clear"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_clear"
                        android:contentDescription="Hapus Teks"
                        android:layout_marginEnd="8dp" />

                    <!-- Translate Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_translate"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Terjemahkan"
                        android:textSize="14sp"
                        app:cornerRadius="20dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Output Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Output Text Area -->
                <TextView
                    android:id="@+id/tv_output_text"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Hasil terjemahan akan muncul di sini..."
                    android:gravity="top|start"
                    android:textSize="16sp"
                    android:padding="8dp"/>
<!--                    android:background="@drawable/rounded_background_light" -->


                <!-- Output Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <!-- Copy Button -->
                    <ImageButton
                        android:id="@+id/btn_copy"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_copy"
                        android:contentDescription="Salin Teks"
                        android:layout_marginEnd="8dp" />

                    <!-- Share Button -->
                    <ImageButton
                        android:id="@+id/btn_share"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_share"
                        android:contentDescription="Bagikan Teks" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Font Size Control -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ukuran Font:"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />

                <SeekBar
                    android:id="@+id/seekbar_font_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="10"
                    android:progress="5" />

                <TextView
                    android:id="@+id/tv_font_size_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16sp"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:minWidth="40dp"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Bar (Initially Hidden) -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>